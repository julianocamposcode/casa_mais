# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

# JavaScript files
[*.{js,jsx}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# JSON files
[*.json]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# CSS files
[*.css]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# SQL files
[*.sql]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2